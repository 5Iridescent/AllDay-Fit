<resources>
    <!-- app theme color -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- app theme setting -->
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!-- chart library style -->
    <style name="Example4ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/example_4_grey</item>
    </style>

    <style name="Example4ButtonTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/example_4_green</item>
    </style>
    <!-- bottomNavigationView style -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!--<item name="android:minHeight">56dp</item>-->
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitleText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="highlightedText">
        <item name="android:textSize">@dimen/text_size_very_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="playerFont">
        <item name="android:fontFamily">@font/i_am_a_player</item>
    </style>

    <style name="buttonText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
      
    <style name="CircularProgressBar">
        <item name="android:radius">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_gradation</item>
    </style>

</resources>