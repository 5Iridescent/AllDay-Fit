<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="510dp"
    android:background="@color/blue"
    tools:context=".ExerciseStatusDailyEditDialog">

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="2023.10.24"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:src="@drawable/ic_prev"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintEnd_toStartOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt"
        app:tint="@color/white" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintStart_toEndOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/user_condition_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="홍현민의 오늘 상태"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_txt" />

    <LinearLayout
        android:id="@+id/user_status_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_condition_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/status_weight_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/status_height_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/status_bmi_view"
                layout="@layout/exercise_status_user_item" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/status_exercise_time_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />

            <include
                android:id="@+id/status_calorie_consumption_view"
                layout="@layout/exercise_status_user_item" />
        </LinearLayout>
    </LinearLayout>
    
    <android.widget.Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_status_wrap"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:background="@drawable/exercise_status_fix_btn_shape"
        android:textColor="@color/white"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="수정완료"/>

</androidx.constraintlayout.widget.ConstraintLayout>