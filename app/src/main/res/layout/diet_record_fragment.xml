<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".DietRecordFragment">

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.10.24"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintDimensionRatio="13:20"
        app:layout_constraintEnd_toStartOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintDimensionRatio="13:20"
        app:layout_constraintStart_toEndOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt" />

    <TextView
        android:id="@+id/diet_record_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/diet_record"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_txt" />

    <LinearLayout
        android:id="@+id/meal_wrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nutritional_analysis_wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diet_record_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/breakfast_view"
                layout="@layout/diet_record_meal_item"
                app:layout_constraintEnd_toStartOf="@id/lunch_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/lunch_view"
                layout="@layout/diet_record_meal_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/breakfast_view"
                app:layout_constraintTop_toTopOf="@id/breakfast_view" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diet_record_txt">

            <include
                android:id="@+id/breakfast_view"
                layout="@layout/diet_record_meal_item"
                app:layout_constraintEnd_toStartOf="@id/lunch_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/lunch_view"
                layout="@layout/diet_record_meal_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/breakfast_view"
                app:layout_constraintTop_toTopOf="@id/breakfast_view" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nutritional_analysis_wrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meal_wrap">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_nutritional_analysis"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="21dp"
                android:layout_height="16dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/daily_intake"
                android:textSize="16sp" />

            <View
                android:layout_width="21dp"
                android:layout_height="16dp"
                android:layout_marginEnd="5dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_recommended_amount"
                android:textSize="16sp" />
        </LinearLayout>

        <include
            android:id="@+id/carbohydrates"
            layout="@layout/diet_record_nutritional_analysis_item" />

        <include
            android:id="@+id/protein"
            layout="@layout/diet_record_nutritional_analysis_item" />

        <include
            android:id="@+id/fat"
            layout="@layout/diet_record_nutritional_analysis_item" />

        <include
            android:id="@+id/calories"
            layout="@layout/diet_record_nutritional_analysis_item" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>