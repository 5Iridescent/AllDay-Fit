<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.GoogleSignInPage">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All-Day Fit"
        android:textSize="48sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <ImageView
        android:id="@+id/googleSignInButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/btn_google"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="500dp"
        app:layout_constraintDimensionRatio="7"
        android:elevation="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ic_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_google"
        android:elevation="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@id/googleSignInButton"
        app:layout_constraintTop_toTopOf="@id/googleSignInButton"
        app:layout_constraintBottom_toBottomOf="@id/googleSignInButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="20dp"
        android:elevation="20dp"
        android:text="@string/google"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/googleSignInButton"
        app:layout_constraintEnd_toEndOf="@+id/googleSignInButton"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@id/ic_google"
        app:layout_constraintTop_toTopOf="@id/googleSignInButton"
        app:layout_constraintVertical_bias="0.478" />
</androidx.constraintlayout.widget.ConstraintLayout>