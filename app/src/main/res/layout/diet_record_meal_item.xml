<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="135dp"
    android:layout_height="145dp"
    android:background="@drawable/view_corner_5"
    android:backgroundTint="@color/light_blue"
    android:padding="10dp"
    android:clickable="true">

    <TextView
        android:id="@+id/meal_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/view_corner_5"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/diet_record_breakfast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_meal_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="29dp"
        android:src="@drawable/ic_plus_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meal_txt"
        android:clickable="true"
        android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>