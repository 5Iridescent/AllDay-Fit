<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".exercisestatus.ExerciseStatusFragment">

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="2023.10.24"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:src="@drawable/ic_prev"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintEnd_toStartOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt"
        app:tint="@color/white" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/none"
        android:contentDescription="@string/subtract_day_btn_desc"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/date_txt"
        app:layout_constraintStart_toEndOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/date_txt"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/user_condition_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="홍현민의 오늘 상태"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_txt" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_condition_txt"
        app:layout_constraintTop_toTopOf="@id/user_condition_txt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_condition_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/status_weight_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/status_height_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/status_bmi_view"
                layout="@layout/exercise_status_user_item" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/status_exercise_time_view"
                layout="@layout/exercise_status_user_item" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <include
                android:id="@+id/status_calorie_consumption_view"
                layout="@layout/exercise_status_user_item" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="315dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_condition_txt">

        <TextView
            android:id="@+id/user_exercise_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/exercise_status_user_state"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/goal_list_wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_stroke_gray_back_shape"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="@id/goal_list_wrap"
            app:layout_constraintStart_toStartOf="@id/goal_list_wrap"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/goal_list_fix_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="@id/goal_list_wrap"
            app:layout_constraintTop_toTopOf="@id/goal_list_wrap"
            app:tint="@color/black" />

        <LinearLayout
            android:id="@+id/goal_list_wrap"
            android:layout_width="140dp"
            android:layout_height="280dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/exercise_record_board"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/user_exercise_goal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercise_status_week_goal"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goal_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>