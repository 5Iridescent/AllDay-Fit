<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainFragment">


    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/Frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="1.9"
        android:background="@drawable/exercise_record_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan"
        />

    <TextView
        android:id="@+id/exercise_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="130dp"
        android:text="@string/exercise_record"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Frame" />

    <TextView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n15일"
        app:layout_constraintStart_toStartOf="@id/Frame"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/sun_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toStartOf="@id/Frame"
        app:layout_constraintTop_toBottomOf="@id/sun" />

    <TextView
        android:id="@+id/mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n16일"
        app:layout_constraintStart_toEndOf="@id/sun"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/mon_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/sun_circle"
        app:layout_constraintTop_toBottomOf="@id/mon" />

    <TextView
        android:id="@+id/tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n17일"
        app:layout_constraintStart_toEndOf="@id/mon"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/tue_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/mon_circle"
        app:layout_constraintTop_toBottomOf="@id/tue" />

    <TextView
        android:id="@+id/wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n18일"
        app:layout_constraintStart_toEndOf="@id/tue"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/wed_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/tue_circle"
        app:layout_constraintTop_toBottomOf="@id/wed" />

    <TextView
        android:id="@+id/thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n19일"
        app:layout_constraintStart_toEndOf="@id/wed"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/thu_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/wed_circle"
        app:layout_constraintTop_toBottomOf="@id/thu" />

    <TextView
        android:id="@+id/fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n20일"
        app:layout_constraintStart_toEndOf="@id/thu"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/fri_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/thu_circle"
        app:layout_constraintTop_toBottomOf="@id/fri" />

    <TextView
        android:id="@+id/sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="9월\n21일"
        app:layout_constraintStart_toEndOf="@id/fri"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <ImageView
        android:id="@+id/sat_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintStart_toEndOf="@id/fri_circle"
        app:layout_constraintTop_toBottomOf="@id/sat" />


    <ImageButton
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="130dp"
        android:background="@android:color/transparent"
        android:src="@drawable/main_btn"
        app:layout_constraintBottom_toTopOf="@+id/phrase"
        app:layout_constraintDimensionRatio="2.5"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Frame" />

    <TextView
        android:id="@+id/do_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동하기"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn" />

    <TextView
        android:id="@+id/phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="20dp"
        android:text="기운과 끈기는 모든것을 이겨낸다."
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Frame"  />

    <View
        android:id="@+id/white_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phrase"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:text="홍현민"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/view_weight"
        app:layout_constraintEnd_toStartOf="@id/user_sit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/white_view" />

    <TextView
        android:id="@+id/user_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:text="@string/user_condition"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user"
        app:layout_constraintTop_toTopOf="@id/white_view" />

    <ImageView
        android:id="@+id/view_weight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintDimensionRatio="0.6"
        android:background="@drawable/user_cond_board"
        app:layout_constraintEnd_toStartOf="@id/view_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user"
        app:layout_constraintWidth_percent="0.27" />

    <TextView
        android:id="@+id/txt_wt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txt_weight"
        app:layout_constraintEnd_toEndOf="@id/view_weight"
        app:layout_constraintStart_toStartOf="@id/view_weight"
        app:layout_constraintTop_toTopOf="@id/view_weight"/>

    <TextView
        android:id="@+id/txt_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70kg"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_weight"
        app:layout_constraintEnd_toEndOf="@id/view_weight"
        app:layout_constraintStart_toStartOf="@id/view_weight"
        app:layout_constraintTop_toBottomOf="@+id/txt_wt" />

    <ImageView
        android:id="@+id/view_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="0.6"
        android:background="@drawable/user_cond_board"
        app:layout_constraintEnd_toStartOf="@id/view_bmi"
        app:layout_constraintStart_toEndOf="@id/view_weight"
        app:layout_constraintTop_toBottomOf="@id/user"
        app:layout_constraintWidth_percent="0.27" />

    <TextView
        android:id="@+id/txt_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/et"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txt_ex_time"
        app:layout_constraintEnd_toEndOf="@id/view_et"
        app:layout_constraintStart_toStartOf="@id/view_et"
        app:layout_constraintTop_toTopOf="@id/view_et" />

    <TextView
        android:id="@+id/txt_ex_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250m"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_et"
        app:layout_constraintEnd_toEndOf="@id/view_et"
        app:layout_constraintStart_toStartOf="@id/view_et"
        app:layout_constraintTop_toBottomOf="@id/txt_et" />


    <ImageView
        android:id="@+id/view_bmi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintDimensionRatio="0.6"
        android:background="@drawable/user_cond_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_et"
        app:layout_constraintTop_toBottomOf="@id/user_sit"
        app:layout_constraintWidth_percent="0.27" />

    <TextView
        android:id="@+id/txt_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bmi"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txt_bmi"
        app:layout_constraintEnd_toEndOf="@id/view_bmi"
        app:layout_constraintStart_toStartOf="@id/view_bmi"
        app:layout_constraintTop_toTopOf="@id/view_bmi" />

    <TextView
        android:id="@+id/txt_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.6"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_bmi"
        app:layout_constraintEnd_toEndOf="@id/view_bmi"
        app:layout_constraintStart_toStartOf="@id/view_bmi"
        app:layout_constraintTop_toBottomOf="@id/txt_b" />

</androidx.constraintlayout.widget.ConstraintLayout>

