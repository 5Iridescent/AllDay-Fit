<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/ic_user"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user2" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="25dp"
        android:text="쫄튀"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="13dp"
        android:text="작성일 : 2023.11.20"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="18dp"
        android:text="글제목"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="글의 내용을 적어두기"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <android.widget.Button
        android:id="@+id/btn_amend"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="68dp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:text="수정"
        android:background="@drawable/button_radius"
        android:backgroundTint="#0584F9"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <android.widget.Button
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_radius2"
        android:textSize="13dp"
        android:visibility="invisible"
        android:text="삭제"
        app:layout_constraintBottom_toBottomOf="@+id/btn_amend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_amend"
        app:layout_constraintTop_toTopOf="@+id/btn_amend" />
</androidx.constraintlayout.widget.ConstraintLayout>