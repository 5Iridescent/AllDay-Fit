<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".main.MainFragment">


    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_very_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/Frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/exercise_record_board"
        app:layout_constraintDimensionRatio="2.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan" />

    <TextView
        android:id="@+id/exercise_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/exercise_record"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Frame" />

    <TextView
        android:id="@+id/year_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.12"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/exercise_record"
        app:layout_constraintEnd_toEndOf="@id/Frame"
        app:layout_constraintStart_toEndOf="@id/exercise_record" />

    <TextView
        android:id="@+id/sun_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="일"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toTopOf="@id/sun"
        app:layout_constraintEnd_toStartOf="@id/mon_title"
        app:layout_constraintStart_toStartOf="@id/Frame"
        app:layout_constraintTop_toBottomOf="@id/exercise_record" />

    <TextView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="8일"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/sun_title"
        app:layout_constraintStart_toStartOf="@id/sun_title"
        app:layout_constraintTop_toBottomOf="@id/sun_title" />


    <ImageView
        android:id="@+id/sun_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toEndOf="@id/sun_title"
        app:layout_constraintStart_toStartOf="@id/sun_title"
        app:layout_constraintTop_toBottomOf="@id/sun" />

    <TextView
        android:id="@+id/mon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/sun_title"
        app:layout_constraintEnd_toStartOf="@id/tue_title"
        app:layout_constraintStart_toEndOf="@id/sun_title"
        app:layout_constraintTop_toTopOf="@id/sun_title" />

    <TextView
        android:id="@+id/mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6일"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/mon_title"
        app:layout_constraintStart_toStartOf="@id/mon_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/mon_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_check"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/mon_title"
        app:layout_constraintStart_toStartOf="@id/mon_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />

    <TextView
        android:id="@+id/tue_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/mon_title"
        app:layout_constraintEnd_toStartOf="@id/wed_title"
        app:layout_constraintStart_toEndOf="@id/mon_title"
        app:layout_constraintTop_toTopOf="@id/mon_title" />

    <TextView
        android:id="@+id/tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5일"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/tue_title"
        app:layout_constraintStart_toStartOf="@id/tue_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/tue_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/tue_title"
        app:layout_constraintStart_toStartOf="@id/tue_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />

    <TextView
        android:id="@+id/wed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/tue_title"
        app:layout_constraintEnd_toStartOf="@id/thu_title"
        app:layout_constraintStart_toEndOf="@id/tue_title"
        app:layout_constraintTop_toTopOf="@id/tue_title" />

    <TextView
        android:id="@+id/wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5일"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/wed_title"
        app:layout_constraintStart_toStartOf="@id/wed_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/wed_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/wed_title"
        app:layout_constraintStart_toStartOf="@id/wed_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />

    <TextView
        android:id="@+id/thu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/wed_title"
        app:layout_constraintEnd_toStartOf="@id/fri_title"
        app:layout_constraintStart_toEndOf="@id/wed_title"
        app:layout_constraintTop_toTopOf="@id/wed_title" />

    <TextView
        android:id="@+id/thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5일"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/thu_title"
        app:layout_constraintStart_toStartOf="@id/thu_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/thu_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/thu_title"
        app:layout_constraintStart_toStartOf="@id/thu_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />

    <TextView
        android:id="@+id/fri_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/thu_title"
        app:layout_constraintEnd_toStartOf="@id/sat_title"
        app:layout_constraintStart_toEndOf="@id/thu_title"
        app:layout_constraintTop_toTopOf="@id/thu_title" />

    <TextView
        android:id="@+id/fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5일"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/fri_title"
        app:layout_constraintStart_toStartOf="@id/fri_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/fri_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/fri_title"
        app:layout_constraintStart_toStartOf="@id/fri_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />


    <TextView
        android:id="@+id/sat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="토"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@id/fri_title"
        app:layout_constraintEnd_toEndOf="@+id/Frame"
        app:layout_constraintStart_toEndOf="@id/fri_title"
        app:layout_constraintTop_toTopOf="@id/fri_title" />

    <TextView
        android:id="@+id/sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5일"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintEnd_toEndOf="@id/sat_title"
        app:layout_constraintStart_toStartOf="@id/sat_title"
        app:layout_constraintTop_toTopOf="@id/sun" />

    <ImageView
        android:id="@+id/sat_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/sun_circle"
        app:layout_constraintEnd_toEndOf="@id/sat_title"
        app:layout_constraintStart_toStartOf="@id/sat_title"
        app:layout_constraintTop_toTopOf="@id/sun_circle" />

    <View
        android:id="@+id/btn_exercise"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/main_btn"
        app:layout_constraintBottom_toBottomOf="@id/Frame"
        app:layout_constraintEnd_toEndOf="@id/Frame"
        app:layout_constraintStart_toStartOf="@id/Frame"
        app:layout_constraintTop_toBottomOf="@id/Frame" />

    <TextView
        android:id="@+id/do_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동하기"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_exercise"
        app:layout_constraintEnd_toEndOf="@+id/btn_exercise"
        app:layout_constraintStart_toStartOf="@+id/btn_exercise"
        app:layout_constraintTop_toTopOf="@id/btn_exercise" />

    <TextView
        android:id="@+id/phrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="35dp"
        android:text="기운과 끈기는 모든것을 이겨낸다."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toTopOf="@id/cons_white"
        app:layout_constraintEnd_toEndOf="@id/Frame"
        app:layout_constraintStart_toStartOf="@id/Frame"
        app:layout_constraintTop_toBottomOf="@id/Frame" />

    <View
        android:id="@+id/cons_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phrase" />

    <LinearLayout
        android:id="@+id/user_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cons_white">

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍현민"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_condition"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <View
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:background="@drawable/black_stroke_gray_back_shape"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@id/goal_list_wrap"
        app:layout_constraintEnd_toEndOf="@id/goal_list_wrap"
        app:layout_constraintStart_toStartOf="@id/goal_list_wrap"
        app:layout_constraintTop_toTopOf="@id/goal_list_wrap" />

    <ImageView
        android:id="@+id/goal_list_fix_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fix_goal_list_btn"
        android:src="@drawable/ic_edit"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="@id/goal_list_wrap"
        app:layout_constraintTop_toTopOf="@id/goal_list_wrap"
        app:tint="@color/black" />

    <LinearLayout
        android:id="@+id/goal_list_wrap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/exercise_record_board"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_wrap">

        <TextView
            android:id="@+id/user_exercise_goal_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_status_week_goal"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_very_small"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goal_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

